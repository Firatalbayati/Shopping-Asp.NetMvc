@model TulipShopping.Models.AdminTable

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_AdminLayout .cshtml";
}


<style>
    hr.new1 {
        border: 0;
        height: 2px;
        background-image: linear-gradient(to right, rgba(0, 0, 0, 0), rgba(9, 84, 132), rgba(0, 0, 0, 0));
    }
</style>

<html dir="rtl">
<br />
<h2>إضافة فئة جديدة</h2>
<div><h4 class="alert-danger">@ViewBag.Basarisiz</h4></div>
@using (Html.BeginForm("Create", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr class="new1" />
        <br />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.KategoriFoto, "تحميل الصورة", new { @class = "pmtallocated pull-right control-label", @dir = "rtl" })
            <div class="col-md-10">
                <input type="file" name="KategoriFoto" id="KategoriFoto" accept=".jpg,.PNG,.gif,.JPEG,.jpeg" class="form-control" required="" />
                @Html.ValidationMessageFor(model => model.KategoriFoto, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.KategoriAdi, "اسم الفئة", new { @class = "pmtallocated pull-right control-label col-md-2", @dir = "rtl" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.KategoriAdi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.KategoriAdi, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Dolar, "دولار", new { @class = "pmtallocated pull-right control-label col-md-2", @dir = "rtl" })
            <div class="col-md-10">
                <div>
                    <input type="text" name="Dolar" id="Dolar" class="form-control" required="" size="5" style="text-align:center; " maxlength="4" onchange="this.value = this.value.replace('.' , ',')" />
                </div>
                @Html.ValidationMessageFor(model => model.Dolar, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Dinar, "دينار عراقي", new { @class = "pmtallocated pull-right control-label col-md-2", @dir = "rtl" })
            <div class="col-md-10">
                <div>
                    <input type="text" name="Dinar" id="Dinar" class="form-control" required="" size="5" style="text-align:center; " maxlength="4" onchange="this.value = this.value.replace('.' , ',')" />
                    <br />
                </div>
                @Html.ValidationMessageFor(model => model.Dinar, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TransferMiktari, "مبلغ التحويل", new { @class = "pmtallocated pull-right control-label col-md-2", @dir = "rtl" })
            <div class="col-md-10">
                <div>
                    <input type="text" name="TransferMiktari" id="TransferMiktari" class="form-control" required="" size="5" style="text-align:center; " maxlength="4" onchange="this.value = this.value.replace('.' , ',')" />
                    <br />
                </div>
                @Html.ValidationMessageFor(model => model.TransferMiktari, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Kargo, "كاركو", new { @class = "pmtallocated pull-right control-label col-md-2", @dir = "rtl" })
            <div class="col-md-10">
                <div>
                    <input type="text" name="Kargo" id="Kargo" class="form-control" required="" size="5" style="text-align:center; " maxlength="5" onchange="this.value = this.value.replace('.' , ',')" />
                    <br />
                </div>
                @Html.ValidationMessageFor(model => model.Kargo, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Nakliye, "شحن", new { @class = "pmtallocated pull-right control-label col-md-2", @dir = "rtl" })
            <div class="col-md-10">
                <div>
                    <input type="text" name="Nakliye" id="Nakliye" class="form-control" required="" size="5" style="text-align:center; " maxlength="5" onchange="this.value = this.value.replace('.' , ',')" />
                    <br />
                </div>
                @Html.ValidationMessageFor(model => model.Nakliye, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Katki, "المضاف", new { @class = "pmtallocated pull-right control-label col-md-2", @dir = "rtl" })
            <div class="col-md-10">
                <div>
                    <input type="text" name="Katki" id="Katki" class="form-control" required="" size="5" style="text-align:center; " maxlength="5" onchange="this.value = this.value.replace('.' , ',')" />
                    <br />
                </div>
                @Html.ValidationMessageFor(model => model.Katki, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="حفظ الفئة" class="btn btn-primary" />
                @Html.ActionLink("رجوع الى الصفحة الرئيسية", "Index", routeValues: null, htmlAttributes: new { @class = "btn btn-warning", @role = "button" })
            </div>
        </div>
    </div>
}
</html>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
